// RT-040: Variable lifetime ends at end of scope
// This is a positive test showing scoped variables work correctly

&^main() -> #i32 {
    result:#i32 = 0;
    1 ? {
        scoped:#i32 = 42;
        result = scoped;
    }
    // scoped is no longer accessible here
    result  // Should be 42
}
