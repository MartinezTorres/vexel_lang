// RT-012: Immutable globals (initialized at declaration) are compile-time constants

&compute() -> #i32 {
    10 + 20;
}

// Immutable global - computed at compile time
value:#i32 = compute();

// Can use immutable global as array size (proves it's compile-time constant)
arr:#i32[value];

&^main() -> #i32 {
    |arr|
}
