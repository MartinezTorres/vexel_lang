// RT-021: Accessing uninitialized values during compile-time execution triggers compile-time error

&bad_func() -> #i32 {
    mut x #i32;
    // Accessing uninitialized variable
    x;
}

// Trying to use at compile time should fail
value:#i32 = bad_func();

&^main() -> #i32 {
    value
}
