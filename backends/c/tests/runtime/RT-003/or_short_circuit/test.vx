// RT-003: Logical OR operator (||) short-circuits evaluation
// If left operand is true, right operand should NOT be evaluated

mut evaluated #b = false;

&trigger() -> #b {
    evaluated = true;
    false;
}

&^main() -> #i32 {
    // true || trigger() should not call trigger()
    true || trigger();

    // evaluated should still be false
    evaluated ? 1 : 0
}
