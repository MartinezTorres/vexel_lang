// GE-005: Vexel is an operator-based language
// All operations use operators rather than keywords

&^main() -> #i32 {
    a:#i32 = 10;
    b:#i32 = 5;

    // Arithmetic operators
    sum:#i32 = a + b;
    diff:#i32 = a - b;
    prod:#i32 = a * b;
    quot:#i32 = a / b;

    // Comparison operators
    cond:#b = a > b;

    // Conditional operator
    result:#i32 = cond ? sum : diff;

    result;
}
