// @rfc: backends/c/README.md#calling--dispatch-rules
// @desc: Tail calls may be optimised but are not required. | Tail calls may be optimised but not required
// @expect-exit: 0
// @command: {VEXEL} -b c test.vx


&factorial(n:#i32, acc:#i32) -> #i32 {
    (n <= 1) ? acc : factorial(n - 1, acc * n)
}

&^main() -> #i32 {
    factorial(5, 1)
}
