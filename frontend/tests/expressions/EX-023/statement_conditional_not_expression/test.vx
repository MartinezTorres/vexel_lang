// EX-023: Statement conditional not usable as expression - ERROR
&!print(arg0:#i32);

&^main() -> #i32 {
    x:#i32 = 10;
    // ERROR: statement conditional has no value
    result = (x > 5 ? print(x));
    -> 0;
}
