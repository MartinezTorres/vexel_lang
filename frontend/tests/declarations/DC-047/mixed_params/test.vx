// @rfc: doc/vexel-rfc.md#declarations
// @desc: Functions can mix expression and value parameters | Mix expression and value parameters


// DC-047: Mix expression and value parameters
&mix($body, amount:#i32, $after) -> #i32 {
    temp:#i32 = amount;
    $body;
    temp = temp + 1;
    $after;
    temp
}

&^main() -> #i32 {
    sum:#i32 = 0;
    other:#i32 = 5;
    mix(sum = sum + 1, 3, other = other * 2);
    sum + other
}
