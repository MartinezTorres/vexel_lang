// DC-061: Operator methods overload core operators
#Vec(x:#i32, y:#i32);

&(a)#Vec::+(b:#Vec) -> #Vec {
    Vec(a.x + b.x, a.y + b.y)
}

&^main() -> #i32 {
    v1:#Vec = Vec(1, 2);
    v2:#Vec = Vec(3, 4);
    v3:#Vec = v1 + v2;
    v3.x + v3.y
}
