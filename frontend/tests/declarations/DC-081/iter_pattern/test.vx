// DC-081: Typical iteration pattern
#Collection(data:#i32[4]);

&(c)#Collection::@($loop) {
    _:#i32 = c.data[0];
    $loop;
}

&^main() -> #i32 {
    coll:#Collection = Collection([1, 2, 3, 4]);
    product:#i32 = 1;
    coll@{ product = product * _; }
    product
}
